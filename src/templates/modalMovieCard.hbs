<div class='finfo-moviecard__img-wrapper' id='flip-wrapper'>
  <img
    class='finfo-moviecard__img'
    src='{{poster_path}}'
    alt='{{title}}'
    loading='lazy'
  />
  <div class='finfo-moviecard__back-side'>
    <table class='finfo-moviecard__back-side-info'>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Original Title</th>
        <td
          class='finfo-moviecard__back-side-table-description'
        >{{original_title}}</td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Production companies
          name</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Production countries</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Release date</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Budget</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Revenue</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Genres</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
      <tr class='finfo-moviecard__back-side-table'>
        <th class='finfo-moviecard__back-side-table-title'>Tagline</th>
        <td class='finfo-moviecard__back-side-table-description'></td>
      </tr>
    </table>
  </div>
</div>

<div class='finfo-moviecard__container'>
  <h2 class='finfo-moviecard__name'>{{title}}</h2>
  <table class='finfo-moviecard__info'>

    <tr class='finfo-moviecard__table'>
      <th class='finfo-moviecard__table-title'>Vote / Votes</th>
      <td class='finfo-moviecard__table-description'>
        <span class='rating-label rating-label--accent'>{{toFixed
            vote_average
            1
          }}</span>
        /
        <span class='rating-label rating-label--default'>{{vote_count}}</span>
      </td>
    </tr>
    <tr class='finfo-moviecard__table'>
      <th class='finfo-moviecard__table-title'>Popularity</th>
      <td class='finfo-moviecard__table-description'>{{toFixed
          popularity
          1
        }}</td>
    </tr>
    <tr class='finfo-moviecard__table'>
      <th class='finfo-moviecard__table-title'>Original Title</th>
      <td class='finfo-moviecard__table-description'>{{original_title}}</td>
    </tr>
    <tr class='finfo-moviecard__table'>
      <th class='finfo-moviecard__table-title'>Genre</th>
      <td class='finfo-moviecard__table-description'>

        {{#each genres}}
          <span class='movie-card__genre'>
            {{this}}
          </span>
        {{/each}}

      </td>
    </tr>

  </table>
  <p class='finfo-moviecard__text-about'>ABOUT</p>
  <p class='finfo-moviecard__text'>{{overview}}</p>
  <div class='moviecard-buttons__contanier'>
    <button
      class='button button--light-mode finfo-moviecard__button watched-js'
      type='button'
      data-movie-id='{{id}}'
    >ADD TO WATCHED</button>
    <button
      class='button button--light-mode finfo-moviecard__button queue-js'
      type='button'
      data-movie-id='{{id}}'
    >ADD TO QUEUE</button>
  </div>
</div>